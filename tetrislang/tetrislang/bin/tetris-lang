#!/usr/bin/env python

import argparse
import tetrislang

parser = argparse.ArgumentParser()
parser.add_argument('input_file', metavar='file.tl', required=True)
args = parser.parse_args()

input_code = ''
with open(args.input_file, 'r') as f:
  input_code = f.read()

out = tetrislang.TetrisCompiler(input_code, True)
exec(out)
